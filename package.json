{
    "name": "microbe-framework",
    "version": "1.0.0",
    "description": "Microbe-framework - nextJS build template with TypeScript support",
    "author": "",
    "license": "ISC",
    "main": "index.js",
    "browserslist": [
        ">0.3%",
        "not ie 11",
        "not dead",
        "not op_mini all"
    ],
    "scripts": {
        "dev": "next -p 3001",
        "build": "next build",
        "start": "next start",
        "start:8080": "next start -p 8080",
        "test": "jest --maxWorkers=2 --verbose",
        "test:unit": "jest",
        "test:integration": "cypress run --browser chrome",
        "tdd": "npm run test:unit -- --watch --coverage=false --verbose",
        "cypress:run": "cypress run",
        "cypress:open": "cypress open",
        "cover": "npm run cover:unit && npm run cover:integration && npm run cover:report",
        "cover:unit": "nyc --silent npm run test:unit",
        "cover:integration": "nyc --silent --no-clean npm run test:integration",
        "cover:report": "nyc report --reporter=lcov --reporter=text",
        "cover:merge": "npm run cover:unit && npm run cover:integration && nyc merge .nyc_output coverage.json",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint ./src --fix --cache"
        ]
    },
    "devDependencies": {
        "@babel/preset-env": "^7.16.11",
        "@babel/preset-typescript": "^7.16.7",
        "@next/bundle-analyzer": "^12.1.0",
        "@next/eslint-plugin-next": "^12.1.0",
        "@testing-library/dom": "^8.11.3",
        "@testing-library/jest-dom": "^5.16.2",
        "@testing-library/react": "^12.1.3",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.4.0",
        "@types/next-auth": "^3.15.0",
        "@types/node": "^16.11.13",
        "@types/react": "^17.0.39",
        "@types/react-dom": "^17.0.11",
        "@types/styled-components": "^5.1.23",
        "@typescript-eslint/eslint-plugin": "^4.30.0",
        "@typescript-eslint/parser": "^4.30.0",
        "babel-jest": "^27.5.1",
        "cypress": "^9.5.1",
        "cypress-tags": "^0.3.0",
        "eslint": "^7.32.0",
        "eslint-config-next": "^12.1.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-loader": "^4.0.2",
        "eslint-plugin-cypress": "^2.12.1",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest-dom": "^4.0.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-testing-library": "^5.0.6",
        "growl": "^1.10.5",
        "husky": "^7.0.4",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^27.5.1",
        "jest-cli": "^27.5.1",
        "jest-css-modules-transform": "^4.3.0",
        "jest-fetch-mock": "^3.0.3",
        "jest-next-dynamic": "^1.0.1",
        "jest-styled-components": "^7.0.8",
        "jest-watch-typeahead": "^1.0.0",
        "jwt-decode": "^3.1.2",
        "lint-staged": "^12.3.5",
        "next-compose-plugins": "^2.2.1",
        "next-svgr": "^0.0.2",
        "prettier": "^2.5.1",
        "prettier-eslint": "^8.2.2",
        "react-redux": "^7.2.6",
        "react-test-renderer": "^17.0.2",
        "redux-devtools-extension": "^2.13.9",
        "redux-logger": "^3.0.6",
        "redux-mock-store": "^1.5.4",
        "redux-saga-test-plan": "^4.0.4",
        "ts-jest": "^27.1.3",
        "typescript": "4.6"
    },
    "dependencies": {
        "@marco-polo/browser-support": "^1.0.1",
        "@marco-polo/button": "^1.0.14",
        "@marco-polo/modal": "^1.0.9",
        "@marco-polo/overlay": "^1.0.2",
        "@marco-polo/theme": "^1.1.18",
        "@reduxjs/toolkit": "^1.8.0",
        "@sentry/integrations": "^6.18.2",
        "@sentry/react": "^6.18.2",
        "@sentry/tracing": "^6.18.2",
        "jsdom": "^19.0.0",
        "next": "^12.1.0",
        "next-redux-wrapper": "^7.0.5",
        "next-transpile-modules": "^9.0.0",
        "normalize.css": "^8.0.1",
        "query-string": "^7.1.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-outside-click-handler": "^1.3.0",
        "redux": "^4.1.2",
        "styled-components": "^5.3.3"
    }
}
